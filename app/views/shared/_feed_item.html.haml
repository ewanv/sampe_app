%li{ id: feed_item.id }
	= link_to gravatar_for(feed_item.user), feed_item.user
	%span.user
		= link_to "#{feed_item.user.name} (#{feed_item.user.username})", feed_item.user
	%span.content= add_reply_links_to(wrap(feed_item.content))
	%span.timestamp
		Posted
		= time_ago_in_words(feed_item.created_at)
		ago.
	= render 'shared/micropost_delete_link', object: feed_item
